  "scripts": {
    "start": "npm run serve",
    "serve": "NODE_OPTIONS='--max-old-space-size=4096' vite",
    "build:production": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- vite build",
    "build:check": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- tsc --noEmit",
    "build:es-check": "npm run build:production && npm run escheck",
    "escheck": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- es-check",
    "lint": "NODE_OPTIONS='--max-old-space-size=4096' eslint . --max-warnings 0 --cache && stylelint \"src/**/*.css\"",
    "lint:parallel": "NODE_OPTIONS='--max-old-space-size=4096' eslint . --max-warnings 0 --cache && stylelint \"src/**/*.css\"",
    "lint:changed": "NODE_OPTIONS='--max-old-space-size=4096' eslint . --concurrency 1 --ext .ts,.tsx $(git diff --name-only HEAD~1) --max-warnings 0 --cache && stylelint \"src/**/*.css\"",
    "format": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- prettier --write \"src/**/*.{ts,tsx,css,scss,md,json}\"",
    "format:check": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- prettier --check \"src/**/*.{ts,tsx,css,scss,md,json}\"",
    "type-check": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- tsc --noEmit",
    "type-check:workers": "NODE_OPTIONS='--max-old-space-size=4096' tsc --noEmit --build --incremental",
    "semgrep": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- semgrep --config auto",
    "analyze-bundle": "npm run build:production && NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- npx rollup-plugin-visualizer",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- vitest --watch=false --config vite.config.ts",
    "test:related": "NODE_OPTIONS='--max-old-space-size=4096' vitest related --run --passWithNoTests --config vite.config.ts",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/denyWatch.mjs test:watch",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- vitest run --coverage --config vite.config.ts",
    "test:coverage:watch": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- vitest --coverage --ui --config vite.config.ts",
    "stylelint": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- stylelint \"src/**/*.css\"",
    "storybook": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- npx storybook dev -p 6006",
    "storybook:build": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- npx storybook build",
    "storybook:parity": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- tsx scripts/storybook-parity.ts",
    "storybook:doctor": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/runWithTimeout.mjs 180000 --max-bytes 5242880 --max-lines 2000 -- npx storybook doctor",
    "cleanup:tools": "node scripts/cleanupStrayProcesses.mjs",
    "cache:clear": "rm -rf node_modules/.cache && rm -rf node_modules/.vite && rm -rf node_modules/.eslintcache",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --write",
      "vitest related --run --passWithNoTests --config vite.config.ts"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ],
    "src/**/*.{md,json,yml,yaml,html}": [
      "biome format --write"
    ]
  }
}
