{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ES2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "checkJs": false,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "paths": {
      "@components/*": ["components/*"],
      "@apps/*": ["apps/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@elements/*": ["elements/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@plugins/*": ["plugins/*"],
      "@scripts/*": ["scripts/*"],
      "@strings/*": ["strings/*"],
      "@styles/*": ["styles/*"],
      "@themes/*": ["themes/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.js"]
}
